{
  "extends": ["@frontend-coding-exam/common-config/tsconfig/tsconfig.json"],
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "noPropertyAccessFromIndexSignature": false,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
